<div class="col-md-4 col-centered">

	<h1>New Skill</h1>


	<%= form_for @skill do |f| %>
		
		<div class="field">
		<%= f.label :Name %><br />
		<%= f.text_field :name, autofocus: true, :class => 'form-control' %>
	  </div>
	  
	  <div class="actions">
		<%= f.submit "Submit", :class => 'btn btn-primary' %>
	  </div>
	<% end %>
	<%= link_to 'Back', skills_path, :class => 'btn btn-default' %>
	
</div>

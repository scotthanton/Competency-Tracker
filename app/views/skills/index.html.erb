<% if !notice.nil? %>
<div class="alert alert-info">
  <%= notice %>
</div>
<% end %>

<h1>Listing Skills</h1>

<table class="table">
  <thead>
    <tr>
      <th>Skill</th>	
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %> <br/></td>
        <td><%= link_to 'Show', skill %></td>
		<% if user_signed_in? && current_user.user_level == 9 %>
        <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? && current_user.user_level == 9 %>
<%= link_to 'New Skill', new_skill_path, :class => 'btn btn-primary' %>
<% end %>

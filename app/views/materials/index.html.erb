<% if !notice.nil? %>
<div class="alert alert-info">
  <%= notice %>
</div>
<% end %>

<h1>Listing Materials</h1>

<table class="table">
  <thead>
    <tr>
      <th>Skill</th>
      <th>Description</th>
      <th>Material to learn</th>
      <th>Level</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% 
		@materials.each do |material| 
			@skill=Skill.where(:id => material.skill_id).first
			@level=SkillLevel.where(:id => material.level_id).first	
	%>
      <tr>
        <td><%= @skill.name %></td>
        <td><%= material.description %></td>
        <td><%= material.material_to_learn %></td>
        <td><%= @level.level %></td>
        <td><%= material.created_at %></td>
        <td><%= material.updated_at %></td>
        <td><%= link_to 'Show', material %></td>
        <td><%= link_to 'Edit', edit_material_path(material) %></td>
        <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Material', new_material_path, :class => 'btn btn-primary' %>
